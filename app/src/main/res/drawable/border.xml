<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="5dp" />
                    <gradient
                        android:angle="315"
                        android:endColor="@color/colorP"
                        android:startColor="@color/colorP"
                        android:type="radial"
                        android:centerX="1.00"
                        android:centerY="0.00"
                        android:gradientRadius="300"/>
                    <padding android:bottom="5dp" android:left="0dp" android:right="5dp" android:top="0dp" />
                </shape>
            </item>
            <item android:left="0dp" android:top="0dp">
                <shape>
                    <corners android:radius="5dp" />
                    <gradient
                        android:angle="315"
                        android:endColor="#FFFFFF"
                        android:startColor="@android:color/transparent"
                        android:type="radial"
                        android:centerX="-1.00"
                        android:centerY="-1.00"
                        android:gradientRadius="300"/>
                    <padding android:bottom="0dp" android:left="3dp" android:right="0dp" android:top="3dp" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="2dp">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="@color/hello"
                        />


                </shape>
            </item>
        </layer-list>
    </item>

</selector>